<dx:ThemedWindow
    x:Class="PSMDesktopApp.Views.ServiceInvoicePreviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:reports="clr-namespace:SAPBusinessObjects.WPF.Viewer;assembly=SAPBusinessObjects.WPF.Viewer"
    Style="{StaticResource WindowStyle}"
    ShowTitle="False"
    ShowIcon="False"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    Height="650" Width="800">

    <Grid>
        <reports:CrystalReportsViewer x:Name="ReportViewer"
                                      ShowLogo="False"
                                      ShowRefreshButton="False"
                                      ShowToggleSidePanelButton="False"
                                      ToggleSidePanel="None" />
    </Grid>
</dx:ThemedWindow>
